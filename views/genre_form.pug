extends layout 

block content 

  h1 #{title}

  form(method='POST')
    div.form-group 
      label(form='name') Genre: 
      input#name.from-control(type='text', placeholder='Fantasy, Poetry, etc.', name='name', required, value=(typeof genre !== 'undefined' ? genre.name : '' ) )
    button.btn.btn-primary(type='submit') Submit 

  if errors
    ul
      for error in errors
        li!= error.msg



