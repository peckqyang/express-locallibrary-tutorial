extends layout

block content
  h1= title
  if just_deleted_author_name.length
    p Just deleted the author, #{just_deleted_author_name}

  if author_list.length
    ul
      each author in author_list
        li
          a(href=author.url) #{author.name} 
          |  (#{author.formatted_lifespan})
  else
    p There are no authors